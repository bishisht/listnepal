<%= bootstrap_form_for(@business) do |f| %>

  <div class="name">
    <%= f.text_field :name %>
  </div>

  <div class="address">    
    <%= f.text_field :address %>
  </div>

  <div class="email">
    <%= f.text_field :email %>
  </div>

  <div class="district">
    <%= f.text_field :district %>
  </div>

  <div class="submit">
    <%= f.submit %>
  </div>

<% end %>